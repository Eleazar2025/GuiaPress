                <br>
                <div class="body">
                    <a href="/<%= article.slug %>" class="btn btn-success ml-1">Ler artigo</a>
                </div>
                <br>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <a style="float:right" href="/article/page/2">Next >>></a>
            </div>
            <hr>
        </div>
        <hr>
    </div>

</body>
